@model IEnumerable<Emlak2020.Models.Ilan>

@{
    ViewBag.Title = "Index";
}
<div class="container">


    <div class="row" style="font-size:30px;">



        <!--ilan listesi-->



        <div class="col-md-12">
            <div class="thumbnail">




                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a style="color:black" href="/Home/Index">Ana Sayfası</a></li>
                        <li class="breadcrumb-item"><a style="color:black" href="#">Kazı Dolgu listesi</a></li>

                    </ol>
                </nav>

                <br />
                <table class="table" style="font-size:16px;">
                    <tr>
                        <th>
                            Mahalle
                        <th>
                            Tip
                        </th>

                        <th>
                            Adres
                        </th>
                        <th>
                            Ada
                        </th>
                        <th>
                            Pafta
                        </th>
                        <th>
                            İşBaşlama Tarih
                        </th>
                        <th>
                            Şehir
                        </th>
                        <th>
                            Semt
                        </th>
                        <th>
                            Durum
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Mahalle.MahalleAd)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tip.TipAd)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Adres)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Alan)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Fiyat)
                            </td>
                            <td>
                                @Convert.ToDateTime(item.Tarih).ToString("dd/MM/yyyy")
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Mahalle.Semt.Sehir.SehirAd)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Mahalle.Semt.SemtAd)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tip.Durum.DurumAd)
                            </td>
                            <td>
                                <a class="btn btn-success" href="@Url.Action("Images", new { id = item.IlanId })">Resim Ekle</a>

                                <a class="btn btn-primary" href="@Url.Action("Edit", new { id = item.IlanId })">Düzenle</a>
                                <a class="btn btn-danger" href="@Url.Action("Delete", new { id = item.IlanId })">Sil</a>

                            </td>
                        </tr>
                    }

                </table>




            </div>
        </div>

        @Html.Action("PartialFiltre", "Home")
    </div>
</div>
