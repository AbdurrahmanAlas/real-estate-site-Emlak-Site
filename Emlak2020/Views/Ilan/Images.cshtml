 
@{
    ViewBag.Title = "Images";
}

<div class="container" style="margin-left:50px;">
    <br />

    @{ 


        Html.BeginForm("Images", "Ilan", FormMethod.Post, new { enctype = "multipart/Form-data" });
        foreach(var item in ViewBag.ilan)
        {

            <h3>@item.IlanId Numaralı ilan için Resim Ekle</h3>
            <table>
                <tr>
                    <td>Resim Seç</td>
                    <td><input type="hidden"name="id" value="@item.IlanId"/></td>
                    <td><input type="file" name="file" /></td>
            
                    <td><input type="submit" value="Ekle" class="btn btn-primary" /></td>
                    <td>  @Html.ActionLink("İlan Listesi", "Index", null, new { @class = "btn btn-warning" })</td>
                </tr>




            </table>
        }


    }
    <br />
    <div class="row">
        @foreach(var item in ViewBag.rsm1)
        {
        <div class="col-md-4">

            <div class="thumbnail">

                <img src="~/Content/@item.ResimAd" height="450" width="350" />



            </div>

            <br />
            <br />
            <br />
            <br /><br />
            <br />
            <br />
            <br /><br />
            <br />
        </div>



        }



    </div>



</div>

