@model Emlak2020.Models.SifreDegistirme
@{
    ViewBag.Title = "SifreDegistir";
}

<div class="container">


    <div class="row">
        @Html.Action("PartialFiltre", "Home")


        <!--ilan listesi-->
        <br />



        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Home/Index">Ana Sayfa</a></li>
                <li class="breadcrumb-item"><a href="#">Şifre Degiştirme</a></li>

            </ol>
        </nav>


        <div class="col-md-9">
            <div class="thumbnail" style="width:845px;">

                @using (Html.BeginForm("SifreDegistir", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group ">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Eski Şifre</label>
                        <div class="col-sm-4">
                            @Html.PasswordFor(m => m.OldPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group ">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Yeni şifre</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.NewPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                        </div>
                    </div> <div class="form-group ">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Şifre Tekrar</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.ConNewPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.ConNewPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="form-group ">

                        <div class="col-sm-10 col-sm-offset-2">
                            <button type="submit" class="btn btn-primary"><img src="/Content/emlakresim/magnify-plus (1).png" />Şifre Değiştir</button>


                        </div>
                    </div>


                }
            </div>



        </div>

    </div>

</div>