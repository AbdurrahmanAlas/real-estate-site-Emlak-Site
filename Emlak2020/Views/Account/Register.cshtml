@model Emlak2020.Models.Register
@{
    ViewBag.Title = "Register";
}

<div class="container">
    

    <div class="row">
        @Html.Action("PartialFiltre", "Home")


        <!--ilan listesi-->
        <br />


        <div class="col-md-9">
            <div class="thumbnail" style="width:845px;">

                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Home/Index">Ana Sayfa</a></li>
                        <li class="breadcrumb-item" aria-current="page">Kayıt Ol</a></li>

                    </ol>
                </nav>




                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
                {

                    <div class="form-group ">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Adı</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group ">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Soyadı</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.Surname, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Surname, "", new { @class = "text-danger" })
                        </div>
                    </div> <div class="form-group ">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Kullanıcı Adı</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.Username, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group ">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group ">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Şifre </label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group ">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Şifre Tekrar</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.RePassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.RePassword, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group ">

                        <div class="col-sm-10 col-sm-offset-2">
                            <button type="submit" class="btn btn-primary"><img src="/Content/emlakresim/magnify-plus (1).png" />Kayıt Ol</button>
                        </div>
                    </div>


                }
            </div>



        </div>

    </div>

</div>

