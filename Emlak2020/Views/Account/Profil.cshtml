@model Emlak2020.Models.ProfilGuncelleme
@{
    ViewBag.Title = "Profil";
}

<div class="container">


    <div class="row">
        @Html.Action("PartialFiltre", "Home")


        <!--ilan listesi-->
        <br />



        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Home/Index">Ana Sayfa</a></li>
                <li class="breadcrumb-item"><a href="#">Profil Güncelleme</a></li>

            </ol>
        </nav>


        <div class="col-md-9">
            <div class="thumbnail" style="width:845px;">

                @using (Html.BeginForm("Profil", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id)
                    <div class="form-group ">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Adı</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group ">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Soyadı</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.Surname, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Surname, "", new { @class = "text-danger" })
                        </div>
                    </div> <div class="form-group ">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Kullanıcı Adı</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.Username, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group ">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group ">

                        <div class="col-sm-10 col-sm-offset-2">
                            <button type="submit" class="btn btn-primary"><img src="/Content/emlakresim/magnify-plus (1).png" />Güncelle</button>

                            ya da <a href="/Account/SifreDegistir" class="btn btn-primary">Sifre Degiştir</a>
                        </div>
                    </div>


                }
            </div>



        </div>



    </div>

</div>