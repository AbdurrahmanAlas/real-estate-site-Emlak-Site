@model IEnumerable<Emlak2020.Models.Mahalle>

@{
    ViewBag.Title = "Index";
}


<div class="container">


    <div class="row">
        <div class="col-md-3">
            <br />
            <!--filtreleme kısmı-->

            <form class="form-horizontal">
                <div class="form-group ">
                    <label for="inputEmail3" class="col-sm-4 col-form-label">En Az</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" placeholder="En Az(Fiyat)">
                    </div>
                </div>

                <div class="form-group ">
                    <label for="inputEmail3" class="col-sm-4 col-form-label">En Çok</label>
                    <div class="form-group ">
                        <div class="col-sm-6">
                            <input type="text" class="form-control" placeholder="En Çok(Fiyat)">
                        </div>
                    </div>
                    <div class="form-group ">
                        <label for="inputEmail3" class="col-sm-4 col-form-label">Şehir</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" placeholder="Şehir">
                        </div>

                    </div>
                    <div class="form-group ">
                        <label for="inputEmail3" class="col-sm-4 col-form-label">Semt</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" placeholder="Semt">
                        </div>
                    </div>
                    <div class="form-group ">
                        <label for="inputEmail3" class="col-sm-4 col-form-label">Mahalle</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" placeholder="Mahalle">
                        </div>
                    </div>
                    <div class="form-group ">
                        <label for="inputEmail3" class="col-sm-4 col-form-label">Durum</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" placeholder="Durum">
                        </div>
                    </div>
                    <div class="form-group ">
                        <label for="inputEmail3" class="col-sm-4 col-form-label">Tip</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" placeholder="Tip">
                        </div>
                    </div>
                </div>

                <div class="form-group ">
                    <label for="inputEmail3" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-6">
                        <button type="submit" class="btn btn-primary"><img src="/Content/emlakresim/magnify-plus (1).png" />FİLTRELEME</button>
                    </div>
                </div>
            </form>
        </div>


        <!--ilan listesi-->
        <br />


        <div class="col-md-9">
            <div class="thumbnail" style="width:845px;">




                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Admin/Index"style="color:black"><b>Admin Sayfası</b></a></li>
                        <li class="breadcrumb-item"><a href="#"style="color:black"><b>Mahalle listesi </b></a></li>

                    </ol>
                </nav>
                <a class="btn btn-primary btn btn-block" href="@Url.Action("Create")">Mahalle Ekle</a>
                <br />

                <table class="table">
                    <tr>
                        <th>
                            Semt Adı
                        </th>
                        <th>
                            Mahalle Adı
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Semt.SemtAd)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MahalleAd)
                        </td>
                        <td>
                            <a class="btn btn-primary" href="@Url.Action("Edit", new { id = item.MahalleId })">Düzenle</a>
                            <a class="btn btn-danger" href="@Url.Action("Delete", new { id = item.MahalleId })">Sil</a>

                        </td>
                    </tr>
                    }

                </table>



            </div>
        </div>
    </div>
</div>

   