@model Emlak2020.Models.Mahalle

@{
    ViewBag.Title = "Create";
}


<div class="container">


    <div class="row">
        <div class="col-md-3">
            <br />
            <!--filtreleme kısmı-->

            <form class="form-horizontal">
                <div class="form-group ">
                    <label for="inputEmail3" class="col-sm-4 col-form-label">En Az</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" placeholder="En Az(Fiyat)">
                    </div>
                </div>

                <div class="form-group ">
                    <label for="inputEmail3" class="col-sm-4 col-form-label">En Çok</label>
                    <div class="form-group ">
                        <div class="col-sm-6">
                            <input type="text" class="form-control" placeholder="En Çok(Fiyat)">
                        </div>
                    </div>
                    <div class="form-group ">
                        <label for="inputEmail3" class="col-sm-4 col-form-label">Şehir</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" placeholder="Şehir">
                        </div>

                    </div>
                    <div class="form-group ">
                        <label for="inputEmail3" class="col-sm-4 col-form-label">Semt</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" placeholder="Semt">
                        </div>
                    </div>
                    <div class="form-group ">
                        <label for="inputEmail3" class="col-sm-4 col-form-label">Mahalle</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" placeholder="Mahalle">
                        </div>
                    </div>
                    <div class="form-group ">
                        <label for="inputEmail3" class="col-sm-4 col-form-label">Durum</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" placeholder="Durum">
                        </div>
                    </div>
                    <div class="form-group ">
                        <label for="inputEmail3" class="col-sm-4 col-form-label">Tip</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" placeholder="Tip">
                        </div>
                    </div>
                </div>

                <div class="form-group ">
                    <label for="inputEmail3" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-6">
                        <button type="submit" class="btn btn-primary"><img src="/Content/emlakresim/magnify-plus (1).png" />FİLTRELEME</button>
                    </div>
                </div>
            </form>
        </div>


        <!--ilan listesi-->
        <br />


        <div class="col-md-9">
            <div class="thumbnail" style="width:845px;">




                <nav aria-label="breadcrumb" >
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Admin/Index" style="color:darkblue">Admin Sayfası</a></li>
                        <li class="breadcrumb-item"><a href="#"style="color:darkblue">Mahalle Ekle</a></li>

                    </ol>
                </nav>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.MahalleAd,"Mahalle Adı", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.MahalleAd, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MahalleAd, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.SemtId, "Semt Adı", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            @Html.DropDownList("SemtId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.SemtId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Ekle" class="btn btn-primary" />
                            @Html.ActionLink("Mahalle Listesi", "Index", null, new { @class = "btn btn-warning" })
                        </div>
                    </div>
                </div>
                }






            </div>
        </div>
    </div>
</div>
