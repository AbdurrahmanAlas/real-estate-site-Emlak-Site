<div id="properties" class="section-gray">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 text-center heading-section animate-box ">
                <h3 class="icon-list">  EMLAK İLANLARIMIZ</h3>
                <p>Güvenilir ev,arsa,dükkan sahibi olmanız için sitemizi ziyaret edebilirsiniz.</p>
            </div>
        </div>
       
        <div class="row">
            @foreach (var item in Model)
            {



                var c = 1;
                <div class="col-md-4 animate-box" >
                    <div class="property" style="border: groove">
                        @foreach (var rsm in ViewBag.image)
                        {
                            if (rsm.IlanId == item.IlanId)
                            {
                                if (@c == 1)
                                {

                                    <a href="~/Home/Detay/@item.IlanId"> <img src="~/Content/@rsm.ResimAd" style="height:250px;width:355px;" alt="..."></a>

                                    c++;
                                }
                            }
                        }

                    <div class="property-details" style=" background-color: #edffa1">
                        <b><span class="address"><i class="icon-home"><b style="color:darkblue;font-size:20px;margin-left:25px;">@item.Tip.Durum.DurumAd & @item.Tip.TipAd</b></i><h4 style="margin-left:15px;">  @item.Adres</h4></span></b>
                        <span style="margin-left:10px;font-size:22px;" class="badge bg-dark">₺  @item.Fiyat.000 </span>
                        <p style="margin-left:10px;color:blue"><b>@item.Mahalle.Semt.Sehir.SehirAd  & @item.Mahalle.Semt.SemtAd</b></p>
                        <a href="#" class="list-group">


                            <b>
                                <b style="color:black" class="icon-home2">    @item.OdaSayısı Oda</b>

                                <b style="color:black" class="icon-water">  @item.BanyoSayısı Banyo</b>


                                <b style="color:black" class="icon-back-in-time"> @item.Tarih.ToString()</b>
                                <br />
                            </b>

                        </a>
                    </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>


